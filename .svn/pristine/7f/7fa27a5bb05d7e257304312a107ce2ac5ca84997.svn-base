/* index section */
.grid {
        overflow: hidden;
         padding: 5em 0 0 5em;
         max-width: 76em;
         margin: 0 auto;
      }
      .grid li {
         padding: 0 5em 5em 0;
      }
      .grid li > div {
         background: #808080;
         padding: 5em 5em;
         text-align: center;
      }
      .grid li a {
         color: #fff;
      }
      
      @media all and (min-width: 27em) {
         .grid li {
            width: 50%;
            float: left;
         }
      }
      
      @media all and (min-width: 40em) {
         .grid li {
            width: 33.3333333%;
         }
         .grid li.wide {
            width: 66.666666%;
         }
      }
      @media all and (min-width: 60em) {
         .grid li {
            width: 13%;
         }
         .grid li.wide {
            width: 50%;
         }
      }
