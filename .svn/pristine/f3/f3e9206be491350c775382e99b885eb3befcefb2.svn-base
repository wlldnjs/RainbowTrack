/* search box */
#search {
		position: absolute;
		right: 300px; top: 20px;}
.box {
	width: 412px;
	height:40px;
	border-style:solid; 
	border-width:1px;
	border-color:#ffffff;
	position: relative;
}

.search{
	font-size: 15px;
	padding: 0 15px;
	height: 100%;
	border: none;
	background: transparent;
	highlight-color: #ffffff;
	width: 300px;
	float: left;
	color: #fff;
}
.submit {
	position: absolute;
	font-size: 30px;
	padding: 0 15px;
	border: none;
	bottom: 3px;
}

textarea, input {
	font-family:"open sans", sans-serif;
}

.submit {
	font-weight: 500;
	background: transparent;
	color:#ffffff;
	height:100%;
	width:25%;
	float:right;
	transition: all 100ms ease-in-out;
	text-align: center;
	vertical-align: middle;
}

input::-webkit-input-placeholder { 
	color:#fff;
	font-family:"open sans", sans-serif;
	}
.placeholder::-webkit-input-placeholder {
	color:#c0c0c0;
	font-family:"open sans", sans-serif;
}
input::-moz-placeholder { 
	color:#fff;
	font-family:"open sans", sans-serif;
	}

